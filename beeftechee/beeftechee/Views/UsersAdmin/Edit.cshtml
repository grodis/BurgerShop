@model beeftechee.Models.ApplicationUser
@{
    ViewBag.Title = "Edit";

    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container myPadding2">


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
        @Html.HiddenFor(model => model.Id)


        <fieldset class="form-horizontal">
            <legend>Edit user</legend>
            <div class="form-group">
                @Html.LabelFor(m => m.UserName, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.UserName, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Roles, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("RoleId", null, "No Role", htmlAttributes: new { @class = "form-control" })
                </div>

            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-secondary" />
                    @Html.ActionLink("Cancel", "Index", new { }, htmlAttributes: new { @class = "btn btn-secondary" })
                </div>
            </div>

        </fieldset>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
