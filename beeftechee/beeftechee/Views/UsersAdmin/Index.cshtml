@model IEnumerable<beeftechee.Models.ApplicationUser>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid myPadding">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="row">
                <div class="col-md-6">
                    <h3 class="font-weight-bold text-primary">Users Table</h3>
                </div>

            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.UserName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Roles)
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td>
                                    @foreach (var ur in item.Roles)
                                    {
                                        foreach (var r in ViewBag.RoleName)
                                        {
                                            if (r.Id == ur.RoleId)
                                            {
                                                @r.Name
                                            }
                                        }

                                    }
                                </td>
                                <td>
                                    <a href=@Url.Action("Edit", new { id = item.Id }) class="btn btn-secondary"><i class="fas fa-users-cog text-white-50"></i>&nbsp; Edit Role</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>