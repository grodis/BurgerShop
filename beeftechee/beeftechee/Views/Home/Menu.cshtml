@model beeftechee.ViewModels.BurgerDrinkViewModel

@{
    ViewBag.Title = "Menu";
}

<h2>Menu</h2>

<table class="table" id="burgerTable">
    <tr>
        <th>Burger Name</th>
    </tr>

    @foreach (var burger in Model.Burgers)
    {
        <tr>
            <td>
                @burger.Name
            </td>
        </tr>
    }

</table>
<table class="table" id="drinkTable">
    <tr>
        <th>Drink Name</th>
    </tr>

    @foreach (var drink in Model.Drinks)
    {
        <tr>
            <td>
                @drink.Name
            </td>
        </tr>
    }

</table>

