@model IEnumerable<beeftechee.Entities.Drink>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}





<div class="container-fluid">


    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h3 class="m-0 font-weight-bold text-primary mb-2">Drinks List</h3>
            <p>
                @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btn btn-outline-dark" })
            </p>

        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                Drink's Image
                            </th>
                            <th class="text-center">
                                Drink's name
                            </th>
                            <th class="text-center">
                                Litre
                            </th>         
                            <th class="text-center">
                                Price
                            </th>
                            <th class="text-center">
                                Action
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                @if (String.IsNullOrWhiteSpace(item.ImageUrl))
                                {
                                    <td>
                                        <img src="~/Content/noImage.jpg" alt="No Drink Image" />
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <img src="~/Content/DrinkImages/@item.ImageUrl" alt="No Drink Image" />
                                    </td>
                                }

                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Litre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td>


                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

