@model beeftechee.Entities.Burger

@{
    ViewBag.Title = "Delete";

    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="container pt-5 pb-5 mb-5">

    <h3>Are you sure you want to delete this?</h3>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            Burger Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            Bread
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Bread.Name)
        </dd>


        <dt>
            Meat
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Meat.Name)
        </dd>
        <dt>
            Cheese
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cheese.Name)
        </dd>

        <dt>
            Sauce
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sauce.Name)
        </dd>

        <dt>
            Vegetable
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Veggie.Name)
        </dd>



        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt>
            Burger Image
        </dt>
        @if (String.IsNullOrWhiteSpace(Model.ImageUrl))
        {
            <dd>
                <img src="~/Content/noImage.jpg" alt="No Burger Image" />
            </dd>
        }
        else
        {
            <dd>
                <img src="~/Content/BurgerImages/@Model.ImageUrl" alt="No Burger Image" />
            </dd>
        }

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-secondary" /> 
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>
