@{

    Layout = null;

}





<div>
    <div class="container-fluid">

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h3 class="m-0 font-weight-bold text-danger mb-2">Burgers List</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                     <input class="mb-3 col-4" ng-model="search.Name" placeholder="Search by Burger's Name">


                    <table class="table table-bordered mb-5 mt-5" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th class="text-center">
                                    Burger's name
                                </th>
                                <th class="text-center">
                                    Bread type
                                </th>
                                <th class="text-center">
                                    Cheese type
                                </th>
                                <th class="text-center">
                                    Meat type
                                </th>
                                <th class="text-center">
                                    Sauce type
                                </th>
                                <th class="text-center">
                                    Veggetable type
                                </th>

                                <th class="text-center">
                                    Total price
                                </th>
                            </tr>
                        </thead>

                        <tbody>
                            <tr ng-repeat="burger in burgers|filter:search:strict" >
                                <td>
                                    {{burger.Name}}
                                </td>
                                <td>
                                    {{burger.Bread.Name}}
                                </td>
                                <td>
                                    {{burger.Cheese.Name}}
                                </td>
                                <td>
                                    {{burger.Meat.Name}}
                                </td>
                                <td>
                                    {{burger.Sauce.Name}}
                                </td>
                                <td>
                                    {{burger.Veggie.Name}}
                                </td>
                                <td>
                                    €{{burger.Price}}
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>





</div>